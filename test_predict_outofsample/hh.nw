echo
start h2_plus_rttddft
title "rttddft h2 cation"
permanent_dir ./perm
scratch_dir ./scratch
set dft:print_mats T


charge +1

geometry "h2p" units angstroms noautosym nocenter noautoz
  load h2popt.xyz
end

set geometry "h2p"


basis 
  * library 3-21g
end

dft
  odft
  mult 2
  direct
  iterations 200
  xc b3lyp
  cdft 1 1 charge 0.7
  print "final vectors analysis"
  vectors output "h2plus.movecs"
end

task dft

unset rt_tddft:*

